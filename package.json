{
  "name": "@docshield/didactic",
  "version": "0.1.4",
  "description": "Eval/optimization framework for LLM workflows",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest --run --coverage",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "gen:mermaid": "mmdc -i docs/charts.md -o docs/diagram.svg",
    "example:eval:invoice-parser": "tsx example/eval/invoice-parser/index.ts",
    "example:optimizer:expense-categorizer": "tsx example/optimizer/expense-categorizer/index.ts"
  },
  "keywords": [
    "llm",
    "evaluation",
    "optimization",
    "prompt-engineering",
    "ai",
    "anthropic",
    "claude",
    "openai",
    "gpt"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/DocShield-Labs/didactic.git"
  },
  "homepage": "https://github.com/DocShield-Labs/didactic#readme",
  "bugs": {
    "url": "https://github.com/DocShield-Labs/didactic/issues"
  },
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "chalk": "^5.6.2",
    "chrono-node": "^2.9.0",
    "cli-progress": "^3.12.0",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "figures": "^6.1.0",
    "levenshtein": "^1.0.5",
    "munkres-js": "^1.2.2",
    "openai": "^6.15.0",
    "ora": "^9.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@mermaid-js/mermaid-cli": "^11.12.0",
    "@types/cli-progress": "^3.11.6",
    "@types/levenshtein": "^1.0.4",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.7.4",
    "tsdown": "^0.18.1",
    "tsx": "^4.21.0",
    "typescript": "^5.5.0",
    "typescript-eslint": "^8.51.0",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=20.19.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
