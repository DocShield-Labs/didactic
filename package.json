{
  "name": "@docshield/didactic",
  "version": "0.1.0",
  "description": "Eval/optimization framework for LLM workflows",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest --run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "gen:mermaid": "mmdc -i docs/charts.md -o docs/diagram.svg"
  },
  "keywords": [
    "llm",
    "evaluation",
    "optimization",
    "prompt-engineering",
    "ai",
    "anthropic",
    "claude",
    "openai",
    "gpt"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/DocShield-Labs/didactic.git"
  },
  "homepage": "https://github.com/DocShield-Labs/didactic#readme",
  "bugs": {
    "url": "https://github.com/DocShield-Labs/didactic/issues"
  },
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "chrono-node": "^2.9.0",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "levenshtein": "^1.0.5",
    "munkres-js": "^1.2.2",
    "openai": "^6.15.0"
  },
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "^11.12.0",
    "@types/levenshtein": "^1.0.4",
    "@types/node": "^22.0.0",
    "tsdown": "^0.18.1",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=20.19.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
